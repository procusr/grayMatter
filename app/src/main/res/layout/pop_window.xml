<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/information"
                android:textColor="#020202"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="287dp"
                android:layout_height="233dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/add_salary"
                tools:layout_editor_absoluteX="62dp"
                tools:layout_editor_absoluteY="78dp"
                android:paddingTop="40dp"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/you_can_click_here_to_add_a_new_salary"
                android:textColor="#020202"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="287dp"
                android:layout_height="277dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/delete"
                android:paddingTop="40dp"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/you_can_drag_the_card_left_or_right_to_delete_it"
                android:textColor="#020202"
                android:textSize="18sp"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="287dp"
                android:layout_height="233dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/edit"
                android:paddingTop="40dp"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/click_on_the_card_to_edit"
                android:textColor="#020202"
                android:textSize="18sp"
                android:gravity="center"/>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>