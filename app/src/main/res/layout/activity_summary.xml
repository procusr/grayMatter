<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Summary"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1.3">

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Tax Due"
                android:textSize="32sp"
                android:textStyle="bold" />


            <TextView

                android:id="@+id/btn_total_due"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="23sp" />


        </LinearLayout>





        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            >

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:paddingLeft="15dp"
                android:text="Salary"
                android:textSize="27sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/btn_total_salary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|end"
                android:paddingRight="15dp"
                android:textColor="#FFFFFF"
                android:textSize="23sp" />

        </LinearLayout>



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            >

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="center|start"
                android:paddingLeft="15dp"
                android:text="Total Tax"
                android:textSize="27sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/btn_total_tax"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|end"
                android:paddingRight="15dp"
                android:textSize="23sp" />

        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            >

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="center|start"
                android:paddingLeft="15dp"
                android:text="Total Paid"
                android:textSize="27sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/btn_tax_paid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|end"
                android:paddingRight="15dp"
                android:textSize="23sp" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            >

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="center|start"
                android:paddingLeft="15dp"
                android:text="Taxl Rebate"
                android:textSize="27sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/btn_total_rebate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|end"
                android:paddingRight="15dp"
                android:textSize="23sp" />

        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            >

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="center"
                android:paddingRight="30dp"
                android:text="Car"
                android:textSize="23sp" />

            <TextView

                android:id="@+id/btn_rebate_car"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="clip_horizontal|end"
                android:paddingRight="15dp"
                android:textSize="23sp" />

        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            >

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:gravity="center"
                android:text="House"
                android:textSize="23sp" />

            <TextView

                android:id="@+id/btn_rebate_house"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|end"
                android:paddingRight="15dp"
                android:textSize="23sp" />

        </LinearLayout>




    </LinearLayout>





</LinearLayout>