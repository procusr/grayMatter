<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".House"
    tools:showIn="@layout/activity_house"
    android:background="#0000"
    android:id="@+id/content_house">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="39dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/profit"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Profit"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/holo_green_light"
            android:background="@drawable/btn_left"
            android:drawableLeft="@drawable/ic_profit"
            android:layout_marginLeft="25dp"
            />
        <TextView
            android:id="@+id/spentMoney"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Expenses"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/holo_red_light"
            android:background="@drawable/btn_right"
            android:drawableLeft="@drawable/ic_expenses"
            android:layout_marginRight="25dp"
            />

    </LinearLayout>


    <LinearLayout

        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="250dp"
        android:layout_marginRight="3dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/bought"
            android:layout_width="320dp"
            android:layout_height="52dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_bck"
            android:baselineAligned="false"
            android:drawableLeft="@drawable/ic_bought"
            android:drawableRight="@drawable/ic_expenses"
            android:drawablePadding="20dp"
            android:gravity="left|center_vertical"
            android:hint="Buying price"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAllCaps="false"
            android:textColor="#050505"
            android:textColorHint="@drawable/text_hint_selector"
            android:typeface="sans" />


        <EditText
            android:id="@+id/sold"
            android:layout_width="320dp"
            android:layout_height="52dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_bck"
            android:drawableLeft="@drawable/ic_sell"
            android:drawableRight="@drawable/ic_profit"
            android:drawablePadding="20dp"
            android:gravity="left|center_vertical"
            android:hint="Selling price"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAllCaps="false"
            android:textColor="#050505"
            android:textColorHint="@drawable/text_hint_selector"
            android:typeface="sans" />

        <EditText
            android:id="@+id/broker"
            android:layout_width="320dp"
            android:layout_height="52dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_bck"
            android:drawableLeft="@drawable/ic_broker"
            android:drawableRight="@drawable/ic_expenses"
            android:drawablePadding="20dp"
            android:gravity="left|center_vertical"
            android:hint="Broker price"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAllCaps="false"
            android:textColor="#050505"
            android:textColorHint="@drawable/text_hint_selector"
            android:typeface="sans" />

        <EditText
            android:id="@+id/listing"
            android:layout_width="320dp"
            android:layout_height="52dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_bck"
            android:drawableLeft="@drawable/ic_listing"
            android:drawableRight="@drawable/ic_expenses"
            android:drawablePadding="20dp"
            android:gravity="left|center_vertical"
            android:hint="Listing price"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAllCaps="false"
            android:textColor="#050505"
            android:textColorHint="@drawable/text_hint_selector"
            android:typeface="sans" />

        <Button
            android:id="@+id/Btn_Calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|clip_vertical"
            android:gravity="center|center_horizontal"
            android:text="calculate"
            android:textColor="#000000"
            android:background="@drawable/btn_bck"/>
    </LinearLayout>




</RelativeLayout>
