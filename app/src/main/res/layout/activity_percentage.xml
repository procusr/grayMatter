<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_close"
            android:layout_width="match_parent"
            android:layout_height="39dp" />



        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView android:id="@+id/textView6"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="Select Commune"
                android:textColor="@android:color/background_dark"
                />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"/>

        </LinearLayout>

        <EditText
            android:id="@+id/grossSalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Your gross Salary"
            android:inputType="textPersonName" />
        <EditText
            android:id="@+id/netSalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Your Net Salary"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/kommuneValue"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/resultFromDd"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:hint="0.0 "
                android:textAlignment="center"
                android:layout_marginRight="100dp"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/salaryValue"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="From Salary (%) "
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="100dp"
                android:layout_weight="1"
                android:text="0.0"
                android:textAlignment="center"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="30dp"
            android:text="Calculate" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>