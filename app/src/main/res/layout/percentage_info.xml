<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    android:layout_height="match_parent"
    tools:context=".Salary">

    <include
        android:id="@+id/toolbar_close"
        layout="@layout/toolbar_close"
        android:layout_width="match_parent"
        android:layout_height="39dp" />


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:text="Helps to identify whether the user is paying tax according to the percentage provided by the Muncipality. The User can check whether the specified amount paid by his employer match the data." />
    </android.support.design.widget.CoordinatorLayout>


</LinearLayout>


