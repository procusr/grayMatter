<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Car">





  <EditText
      android:id="@+id/edit_text_distance"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Distance"
      android:inputType="numberDecimal" />


  <TextView
      android:id="@+id/text_view_startDate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="Start Date:"
      android:textAppearance="@android:style/TextAppearance.Medium" />


  <TextView
      android:id="@+id/text_view_endDate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:text="End Date:"
      android:textAppearance="@android:style/TextAppearance.Medium" />



  <Switch
      android:id="@+id/switch_gpsDistance"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:hint="Gps Distance" />

  <EditText
      android:id="@+id/edit_text_gps"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="6dp"
      android:hint="Gps Distance" />


  <EditText
      android:id="@+id/edit_text_origin"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="6dp"
      android:hint="Origin" />
  <EditText
      android:id="@+id/edit_text_destination"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="6dp"
      android:hint="Destination"/>
  <EditText
      android:id="@+id/edit_text_purpose"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="6dp"
      android:hint="Purpose"/>
  <EditText
      android:id="@+id/edit_text_amount"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="6dp"
      android:hint="Amount"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_margin="1dp"
      android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content">

      <Button
          android:id="@+id/btnSave"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/colorPrimary"
          android:text="Save"
          android:textColor="@android:color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content">

      <Button
          android:id="@+id/btnCancel"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/colorPrimary"
          android:text="Cancel"
          android:textColor="@android:color/black" />
    </RelativeLayout>



  </LinearLayout>
</LinearLayout>